<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ButtonStateActivity">

    <TextView
        style="@style/textBtnStyle"
        android:text="Exemplo 1: Ativado"
        android:id="@+id/txtBtnContador"
        android:layout_marginTop="50dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Primeiro Botao"
        app:icon="@drawable/icon_24dp"
        android:id="@+id/btnState1"/>

    <TextView
        style="@style/textBtnStyle"
        android:text="Exemplo 2: Desativado"
        android:id="@+id/txt2"
        android:layout_marginTop="50dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Segundo botao"
        app:icon="@drawable/icon_24dp"
        android:id="@+id/btnState2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:text="ALTERNAR"
        android:backgroundTint="@color/purple_200"
        android:id="@+id/btnState3"/>

</LinearLayout>