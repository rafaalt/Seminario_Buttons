<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tudoTelaAtras"
    tools:context=".TudoActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/cruzeiro"
        android:id="@+id/tudoImagemCruzeiro"/>

    <TextView
        style="@style/textBtnStyle"
        android:textSize="30dp"
        android:layout_marginTop="80dp"
        android:text="Apenas um TextView"
        android:id="@+id/tudoTxt"/>

    <TextView
        style="@style/textBtnStyle"
        android:text="Cliques nos Objetos: 0"
        android:textColor="@color/purple_700"
        android:id="@+id/tudoTxtCliques"
        android:layout_marginTop="200dp"/>
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:layout_height="wrap_content">

        <TextView
            style="@style/textBtnStyle"
            android:layout_marginTop="30dp"
            android:text="Cliques na Tela: 0"
            android:textColor="@color/purple_700"
            android:id="@+id/tudoTxtCliquesTela" />
    </LinearLayout>
</FrameLayout>